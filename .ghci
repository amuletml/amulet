import Text.Show.Pretty (ppShow, pPrint)
:seti -XOverloadedStrings -XFlexibleContexts
:set -interactive-print pPrint

:def r! const (pure (unlines [ ":!./repl.sh reload", "::r" ]))
:def reload! const (pure (unlines [ ":!./repl.sh reload", "::r" ]))

:def test const (pure ":!cabal new-run test:tests --")
:def test! const (pure ":!cabal new-run test:tests -- -r")
